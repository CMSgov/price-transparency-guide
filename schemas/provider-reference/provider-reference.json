{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "providers": {
      "type": "object",
      "properties": {
        "npi": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "uniqueItems": true,
          "default": []
        },
        "tin": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ein", "npi"]
            },
            "value": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "value"
          ]
        }
      },
      "required": [
        "npi",
        "tin"
      ]
    }
  },
  "type": "object",
  "properties": {
    "provider_groups": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/providers"
      },
      "default": []
    }
  },
  "required": [
    "provider_groups"
  ]
}
